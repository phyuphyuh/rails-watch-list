<div class="container">
  <%= link_to "BACK", lists_path, class: "create-btn", role: "button" %>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="form">
        <h2>New List</h2>
        <%= simple_form_for @list do |f| %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :photo, as: :file %>
          </div>
          <div class="form-actions">
            <%= f.submit class: 'btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
