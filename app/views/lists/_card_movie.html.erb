<div class="card-movie"
    data-movie-id="<%= bookmark.movie.api_id %>"
    data-movie-title="<%= bookmark.movie.title %>"
    data-action="click->expand-card#toggle"
  data-controller="edit-comment"
  data-edit-comment-target="card">
  <div class="flip-card">
    <div class="front-poster">
      <% if bookmark.movie.poster_url %>
        <%= image_tag bookmark.movie.poster_url, alt: "#{bookmark.movie.title}" %>
      <% else %>
        <%= image_tag "no_image.jpg" %>
      <% end %>
    </div>
    <div class="view-details">
      <span></span>
    </div>
  </div>
  <div class="movie-details">
    <div class="d-flex justify-content-between align-items-center">
      <div class="details-left">
        <% if bookmark.movie.poster_url %>
          <%= image_tag bookmark.movie.poster_url, alt: "#{bookmark.movie.title}" %>
        <% else %>
          <%= image_tag "no_image.jpg" %>
        <% end %>
      </div>
      <div class="details-right d-flex flex-column mx-3">
        <div class="d-flex align-items-baseline">
          <h3><%= bookmark.movie.title %></h3>
          <span class="date ms-2"><%= bookmark.movie.release_date %></span>
        </div>
        <div class="duration-genres d-flex">
          <p>
            <% if bookmark.movie.runtime.present? %>
              <span class="duration"><%= bookmark.movie.runtime/60 %>h <%= bookmark.movie.runtime % 60 %>m</span> &#8226;
            <% end %>
            <% if bookmark.movie.genres.present? %>
              <%= bookmark.movie.genres.join(', ') %>
            <% end %>
          </p>
        </div>
        <div class="overview">
          <p><%= bookmark.movie.overview %></p>
        </div>
      </div>
    </div>
    <%# <p>TMDB <%= bookmark.movie.rating.round(1) %>
    <div class="update-comment mt-3">
      <%= turbo_frame_tag bookmark do %>
        <%= render 'bookmarks/comment', bookmark: bookmark %>
      <% end %>
    </div>
  </div>
  <%# <%= link_to "DELETE", bookmark_path(bookmark), class: "edit-btn", data: {turbo_method: :delete, turbo_confirm: "Delete bookmark?"} %>
</div>
