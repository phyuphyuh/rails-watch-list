<div class="modal fade" id="<%= bookmark.movie.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <%= image_tag bookmark.movie.poster_url, alt: "#{bookmark.movie.title}", class: "modal-title object-fit-contain", width: 200, height: 200 %>
        <h1 class="modal-title fs-5" id="exampleModalLabel"><%= bookmark.movie.title %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="overflow-ellipsis"><%= bookmark.movie.overview %></p>
        <p><%= bookmark.movie.rating.round(1) %></p>
        <p class="card-movie-comment"><%= bookmark.comment %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete bookmark?"} %>
      </div>
    </div>
  </div>
</div>
