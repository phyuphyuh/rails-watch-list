<div class="d-flex">
  <div class="list-info d-flex flex-column">
    <% if @list.photo.attached? %>
      <%= cl_image_tag @list.photo.key %>
    <% end %>
    <h1><%= @list.name %></h1>
    <p><%= @list.description %></p>
  </div>
  <div class="list-bookmarks search-cards">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render "lists/card_movie", bookmark: bookmark %>
      <%= render "lists/modal", bookmark: bookmark %>
    <% end %>
  </div>
  <%# </div> %>
  <%# <%= link_to "Add a movie", new_list_bookmark_path(@list) %>
  <%# </div> %>
</div>
